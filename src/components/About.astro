---
import { Image } from "astro:assets";
import mapeo_satelital from "../assets/about_mapeo_satelital.png";

import { getLangFromUrl, useTranslations } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="about" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {t('about.title')}
        </h2>
        <p class="text-xl text-primary-600 dark:text-primary-400 mb-8">
          {t('about.subtitle')}
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="space-y-6">
          <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
            {t('about.description')}
          </p>
          
          <!-- Skills -->
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
              <span class="text-gray-700 dark:text-gray-300">Manejo Integrado de Cultivos</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
              <span class="text-gray-700 dark:text-gray-300">Agricultura de Precisión</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
              <span class="text-gray-700 dark:text-gray-300">Sostenibilidad Agrícola</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
              <span class="text-gray-700 dark:text-gray-300">Tecnología Agrícola</span>
            </div>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 gap-8">
          <div class="">
            <div class="relative w-full h-[500px]">
              <div class="absolute top-0 right-0 w-4/5 h-4/5 bg-accent-500/20 rounded-3xl backdrop-blur-md animate-slide-in-right"></div>
              <div class="absolute bottom-0 left-0 w-4/5 h-4/5 border-2 border-white/20 rounded-3xl"></div>
                <Image
                  src={mapeo_satelital}
                  alt="Mapeo Satelital"
                  width={800}
                  sizes="(max-width: 768px) 90vw, 40vw"
                  loading="lazy"
                  decoding="async"
                  class="absolute inset-0 m-auto w-4/5 h-4/5 object-cover rounded-2xl shadow-2xl animate-slide-up"
                />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>