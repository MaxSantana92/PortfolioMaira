---
import { Image } from 'astro:assets';
import hero_background from '../assets/hero_background.png';

import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gradient-to-br from-green-50 to-blue-50 dark:from-gray-900 dark:to-gray-800">
  <!-- Background Pattern -->
  <div class="absolute inset-0  bg-gradient-to-r from-primary-500 to-transparent opacity-60 dark:opacity-40">
    <Image class="w-auto h-auto object-cover" src={hero_background} alt="hero_maira"/>
  </div>

  <div class="relative container px-4 py-20 z-1">
    <div class="max-w-4xl flex text-center animate-fade-in">
      <!-- Content -->
      <div class="animate-slide-up">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white mb-4">
          {t('hero.name')}
        </h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-primary-600 dark:text-primary-400 mb-6">
          {t('hero.title')}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
          {t('hero.subtitle')}
        </p>
        <p class="text-l text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto leading-relaxed">
          {t('hero.legend')}
        </p>
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="#projects"
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-600 to-secondary-600 text-white font-semibold rounded-full hover:shadow-lg hover:scale-105 transition-all duration-300 group"
          >
            {t('hero.cta')}
            <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a
            href="#contact"
            class="inline-flex items-center px-8 py-4 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-semibold rounded-full border-2 border-primary-500 hover:bg-primary-50 dark:hover:bg-gray-700 hover:scale-105 transition-all duration-300"
          >
            {t('hero.contact')}
          </a>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-52 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>
</section>